<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_ll_bellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_bottom_10"
        android:paddingTop="@dimen/padding_top_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                style="@style/ChooseFileTextView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_common_button_default"
                android:text="已选(0)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView

                android:id="@+id/id_tv_send"
                style="@style/ChooseFileTextView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/send_bg_selector"
                android:text="下一步"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/id_divideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/id_ll_bellow"
        android:background="@drawable/ic_divideline" />
</merge>